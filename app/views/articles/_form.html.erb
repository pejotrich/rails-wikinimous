<div>
  <%= simple_form_for(@article) do |f| %>
    <div>
      <%= f.label :title %> <br>
      <%= f.text_field :title %>
    </div>
    <div class="content-block">
      <%= f.label :content%><br>
      <%= f.text_area :content %>
    </div>
    <div class="button">
      <%= f.submit %>
    <div>
  <% end %>
</div>